generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  dni      String @unique
  password String
  name     String
}

model Rol {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  staff Staff[]
  duties GuardDuty[]
}

model Staff {
  id    Int    @id @default(autoincrement())
  dni   String @unique
  name  String
  phone String
  day   String?
  last_guard String?
  total_hours Int @default(0)
  image String?
  rolId Int
  rol   Rol    @relation(fields: [rolId], references: [id])
  locationId Int?
  location Location? @relation(fields: [locationId], references: [id])
  assignedGuardDuties GuardDuty[] @relation("AssignedGuards")
  actualGuardDuties   GuardDuty[] @relation("ActualGuards")
}

model Location {
  id   Int    @id @default(autoincrement())
  name String @unique
  image String?
  staff Staff[] // Relaci√≥n uno-a-muchos: una Location tiene muchos trabajadores
  duties GuardDuty[]
}

model GuardDuty {
  id              Int      @id @default(autoincrement())
  assignedDate    DateTime @db.Date

  assignedStaffId Int
  assignedStaff   Staff    @relation("AssignedGuards", fields: [assignedStaffId], references: [id])
  actualStaffId   Int?
  actualStaff     Staff?   @relation("ActualGuards", fields: [actualStaffId], references: [id])

  locationId      Int
  location        Location @relation(fields: [locationId], references: [id])
  rolId           Int
  rol             Rol      @relation(fields: [rolId], references: [id])

  notes           String?
  createdAt       DateTime @default(now())
}
